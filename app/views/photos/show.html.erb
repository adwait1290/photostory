
    <div class="container">
        <header class="codrops-header">
            <h1>Welcome to Photos and a Story!</h1>
            <nav class="codrops-demos">
                <a href="/photos/new">Add a Photo!</a>
                <a href="index2.html">View Profile</a>

            </nav>
        </header>
        <style>
        #container {
        	width:100%;
        }
        </style>
        <%= link_to 'Logout', sessions_destroy_path %>
        <div class="content">
            <!-- trianglify pattern container -->
            <div class="pattern pattern--hidden"></div>
            <!-- cards -->
            <div class="wrapper">        <% @photos.each do |p| %>
                <div class="card">
                    <div class="card__container card__container--closed">
                        <svg class="card__image" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1920 1200" preserveAspectRatio="xMidYMid slice">
                            <defs>
                                <clipPath id="clipPath<%=p.id%>">
                                    <polygon class="clip" points="0,1200 0,0 1920,0 1920,1200"></polygon>
                                </clipPath>
                            </defs>
                    
                            <% @url = p.image_file_name %>
                            <% image = p.image.url(:large) %>

                            <image clip-path="url(#clipPath<%=p.id%>)" width="1920" height="1200" xlink:href="<%= image %>"></image>

                        </svg>
                        <div class="card__content">
							<i class="card__btn-close fa fa-times">Close</i>

							<div class="card__caption">

								<h2 class="card__title"><%= p.title %></h2>
								<p class="card__subtitle"><%= p.city %> <%= p.state %></p>
							</div>
							 
							<div class="card__copy">
								<div class="meta">
														

									<span class="meta__author"><%= p.user.first_name %>&nbsp;<%= p.user.last_name %><br><%= p.created_at.strftime("%B %Y %d") %></span>
									<span class="meta__date"><%= p.description %> <%= p.story %>
									 </span>
								</div>
							
								
							</div>
						</div>

					</div>
                </div>
                	<% end %>
								
<script>
function refreshPage(){
    window.location.reload();
} 
</script>
            <!-- /cards -->
        </div>
        <!-- Related demos -->
    </div>
    <!-- /container -->